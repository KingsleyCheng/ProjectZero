<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="eu.long1.projectZero.FragmentA">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/last16View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/last16Name"
        android:maxLength="16"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/last16View"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/last16View"
        android:text="@string/search"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/last16View"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="66dp"
        android:text="@string/companyName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/companyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/companyName"
        android:layout_marginStart="82dp"
        android:layout_toEndOf="@+id/companyName"
        android:textSize="24sp"
        android:text="@string/unknown" />

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/companyName"
        android:layout_below="@+id/companyName"
        android:layout_marginTop="28dp"
        android:textSize="24sp"
        android:text="@string/homeLocation" />

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/companyText"
        android:layout_alignTop="@+id/home"
        android:text="@string/unknown"
        android:textSize="24sp" />


</RelativeLayout>
