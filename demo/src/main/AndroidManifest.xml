<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.long1.projectZero">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrontActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".EnterInfoListActivity"
            android:alwaysRetainTaskState="true"
            android:label="现场执法信息录入"
            android:launchMode="singleInstance"
            android:parentActivityName=".FrontActivity" />
        <activity
            android:name=".CharacterActivity"
            android:alwaysRetainTaskState="true"
            android:label="案件性质、地区、案卷号"
            android:launchMode="singleInstance"
            android:parentActivityName=".EnterInfoListActivity" />
        <activity
            android:name=".ReasonListActivity"
            android:alwaysRetainTaskState="true"
            android:label="案由"
            android:launchMode="singleInstance"
            android:parentActivityName=".EnterInfoListActivity" />
        <activity
            android:name=".TargetActivity"
            android:alwaysRetainTaskState="true"
            android:label="当事人信息"
            android:launchMode="singleInstance"
            android:parentActivityName=".EnterInfoListActivity" />
        <activity
            android:name=".PhotoActivity"
            android:alwaysRetainTaskState="true"
            android:label="拍照"
            android:launchMode="singleInstance"
            android:parentActivityName=".EnterInfoListActivity" />
    </application>

</manifest>